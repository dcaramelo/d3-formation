{
  "parser": "babel-eslint",
  "globals": {
    "d3": true,
    "villes": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": false,
    "modules": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralDuplicateProperties": false,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "spread": true,
    "superInFunctions": true,
    "templateStrings": true,
    "jsx": true
  },
  "extends": ["standard", "google"],
  "rules": {
    "require-jsdoc": 0,
    "max-len": [1, 130],
    "no-multiple-empty-lines": [2, {"max": 2}],
    "keyword-spacing": [2, { "before": true, "after": true }],
    "new-cap": 0
  }
}
